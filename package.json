{
  "name": "casbin-prisma-adapter",
  "version": "0.0.1",
  "description": "Prisma adapter for Casbin",
  "main": "lib/adapter.js",
  "typings": "lib/adapter.d.ts",
  "scripts": {
    "build": "rimraf lib && tsc",
    "lint": "eslint --ext .ts src/ test/",
    "format": "npm run format:check -- --write",
    "format:check": "prettier --check \"**/*.{md,json}\" \"{src,test}/**/*.ts\"",
    "test": "jest --forceExit"
  },
  "devDependencies": {
    "@prisma/cli": "^2.1.0",
    "@prisma/client": "^2.1.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "casbin": "^5.0.4",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "@prisma/cli": "^2.1.0",
    "@prisma/client": "^2.1.0",
    "casbin": "^5.0.4"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.+(ts|tsx)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
